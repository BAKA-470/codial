<h1>

    <%= title %>
</h1>

<section id="feed-post">
    <h4>Posts</h4>
    <% if(locals.user){ %>
        <form action="/posts/create" id="new-post-form" method="post">
            <textarea name="content" id="" cols="30" rows="2" placeholder="Write your post here..."></textarea><br>
            <input type="submit" value="Post">
        </form>
        <% } %>
            <div id="post-container">
                <ul>
                    <% for (post of posts){ %>
                        <li>
                            <p>
                                <%= post.content %> <br>
                                    <small>
                        <%= post.user.name%>
                    </small></p>

                        </li>
                        <% }%>
                </ul>
            </div>
</section>