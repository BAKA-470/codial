<body>
    <%- include('_header'); %>

        <main id="layout-main">
            <%- body %>
        </main>


        <%- include('_footer'); %>
            <%- script %>

                <script>
                    <% if(flash.success && flash.success.length > 0) { %>
                    new Noty({
                        theme: 'nest',
                        text: '<%= flash.success %>',
                        type: 'success',
                        layout: 'topLeft',
                        timeout: 1500
                    }).show();
                    <% } %>

                    <% if(flash.error && flash.error.length > 0) { %>
                    new Noty({
                        theme: 'nest',
                        text: '<%= flash.error %>',
                        type: 'error',
                        layout: 'topLeft',
                        timeout: 1500
                    }).show();
                    <% } %>
                </script>
</body>

</html>